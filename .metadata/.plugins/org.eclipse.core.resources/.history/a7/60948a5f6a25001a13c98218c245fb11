package com.logiqube.basketqube.dataimport.players;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;
import org.springframework.security.web.firewall.FirewalledRequest;
import org.springframework.stereotype.Component;

@Component
public class LoadPlayers {
	
	private String EL_BASE_URL = "https://www.euroleague.net";

	public void hello() {
		System.out.println("Hello load players");
	}
	
	public void load() throws IOException {
		Document doc = Jsoup.connect("https://www.euroleague.net/competition/players?letter=A").get();
		String title = doc.title();
		System.out.println("title is: " + title);
		
		// select div with info
//		Element e = doc.select("div.person-list.player-list > div.items-list").first();
		
//		Elements links = e.select("div.item");
		Elements playerLinks = doc.select("div.person-list.player-list > div.items-list > div.item > a:nth-child(1)");
		
		playerLinks.forEach( link -> {
			String text = link.html();
			String[] name = text.split(",",2);
			String firstName = name[0].trim();
			String lastName = name[1].trim();
			System.out.println(firstName + " " + lastName);
			String url = EL_BASE_URL + link.attr("href");
			loadPlayerFromUrl(EL_BASE_URL + link.attr("href"), text.substring(text.indexOf(',')+1).trim(), text.substring(0, text.indexOf(',')).trim());
		});
		
//		for (Element link : playerLinks) {
//			String a = link.
//		}
		
		System.out.println("Player list");
//		System.out.println(e.data());
	}

	private void loadPlayerFromUrl(String url, String firstName, String lastName) {
		System.out.println(firstName + " " + lastName);
		System.out.println(url);
		
	}
	
}
